<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.sb.auto.mapper.PimangMapper">

    <select id="validateUser" resultType="com.sb.auto.model.EtcUser">
        select * from ETC_USER
        where 1=1
        AND USER_ID = #{userId} LIMIT 1;
    </select>

    <select id="countNumber" resultType="int">
        select count(*) from `MAINDB`.`STOCK_TAKING`
        where 1=1
        AND USER_ID = #{userId}
        AND `NUMBER` = #{number}
        LIMIT 1;
    </select>

    <insert id="insertStock" parameterType="com.sb.auto.model.StockEntity">
        INSERT INTO `MAINDB`.`STOCK_TAKING` (`NUMBER`, `USER_ID`, `NICKNAME`, `BLANCE1`, `BLANCE2`, `BLANCE3`, `BLANCE4`, `BLANCE5`) VALUES
        (#{number}, #{userId}, #{nickname}, #{blance1}, #{blance2}, 0, 0, 0);
    </insert>


    <update id="updateStock" parameterType="com.sb.auto.model.StockEntity">
         UPDATE `MAINDB`.`STOCK_TAKING` SET nickname = #{nickname}, blance1 = #{blance1}, blance2 = #{blance2}, blance3 = '0', blance4 = '0', blance5 = '0'
         WHERE 1=1
         AND USER_ID = #{userId}
         AND `NUMBER` = #{number};
    </update>

    <select id="selectStock" resultType="com.sb.auto.model.StockEntity">
        select * from `MAINDB`.`STOCK_TAKING`
        where 1=1
        AND USER_ID = #{userId};
    </select>


</mapper>